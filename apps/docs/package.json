{
	"name": "docs",
	"type": "module",
	"version": "0.0.1",
	"scripts": {
		"copy-docs": "bun ./scripts/copy-package-docs.ts",
		"generate-cli-docs": "bun ./scripts/generate-cli-docs.ts",
		"prebuild": "bun run copy-docs && bun run generate-cli-docs",
		"dev": "bun run prebuild && astro dev",
		"start": "bun run prebuild && node ./dist/server/entry.mjs",
		"build": "bun run prebuild && astro build",
		"preview": "astro preview",
		"astro": "astro"
	},
	"dependencies": {
		"@astrojs/node": "^9.2.2",
		"@astrojs/starlight": "^0.34.3",
		"@astrojs/vercel": "^8.2.0",
		"@types/node": "^22.15.29",
		"astro": "^5.6.1",
		"chalk": "^5.4.1",
		"glob": "^11.0.2",
		"sharp": "^0.34.2",
		"starlight-theme-galaxy": "^0.5.2",
		"starlight-typedoc": "^0.21.3",
		"typedoc": "^0.28.5",
		"typedoc-plugin-markdown": "^4.6.4",
		"unreal-orm": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.3"
	},
	"packageManager": "bun@1.3.2"
