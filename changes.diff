+  // or using expressions
+  where: gte("age", 18),
+  order: [{ field: "age", direction: "DESC" }],
+});
 
 // BAD: ORM-specific query abstractions
-const adults = await User.where()
-    .ageGreaterThan(18)
-    .orderByAgeDesc()
-    .find();
